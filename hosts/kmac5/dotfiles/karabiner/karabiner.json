{
  "global": { "show_in_menu_bar": false },
  "profiles": [
    {
      "complex_modifications": {
        "rules": [
          {
            "description": "Swap right cmd with right option",
            "manipulators": [
              {
                "from": {
                  "key_code": "right_option",
                  "modifiers": { "optional": ["any"] }
                },
                "to": [{ "key_code": "right_command" }],
                "type": "basic"
              },
              {
                "from": {
                  "key_code": "right_command",
                  "modifiers": { "optional": ["any"] }
                },
                "to": [{ "key_code": "right_option" }],
                "type": "basic"
              }
            ]
          },
          {
            "description": "CAPS_LOCK (hold) -> ctrl; CAPS_LOCK (tap) -> esc",
            "manipulators": [
              {
                "from": {
                  "key_code": "caps_lock",
                  "modifiers": { "optional": ["any"] }
                },
                "to": [
                  {
                    "key_code": "right_control"
                  }
                ],
                "to_if_alone": [{ "key_code": "escape" }],
                "type": "basic"
              }
            ]
          },
          {
            "description": "CAPS_LOCK (remapped to right_control) + h/j/k/l -> Arrow Keys",
            "manipulators": [
              {
                "from": {
                  "key_code": "h",
                  "modifiers": {
                    "mandatory": ["right_control"], //note: this uses right_control, so that after pressing phisical control (which is left_control almost always), it will not trigger this. Alternative would be using karabiner variables to indicate that caps lock is pressed, and then making conditions there in vim keys remab, but it is more verbose and less readable
                    "optional": ["any"]
                  }
                },
                "to": [{ "key_code": "left_arrow" }],
                "type": "basic"
              },
              {
                "from": {
                  "key_code": "j",
                  "modifiers": {
                    "mandatory": ["right_control"],
                    "optional": ["any"]
                  }
                },
                "to": [{ "key_code": "down_arrow" }],
                "type": "basic"
              },
              {
                "from": {
                  "key_code": "k",
                  "modifiers": {
                    "mandatory": ["right_control"],
                    "optional": ["any"]
                  }
                },
                "to": [{ "key_code": "up_arrow" }],
                "type": "basic"
              },
              {
                "from": {
                  "key_code": "l",
                  "modifiers": {
                    "mandatory": ["right_control"],
                    "optional": ["any"]
                  }
                },
                "to": [{ "key_code": "right_arrow" }],
                "type": "basic"
              }
            ]
          },
          {
            "description": "Left cmd + double-tap q â†’ close application",
            "manipulators": [
              {
                "conditions": [
                  {
                    "name": "command-q",
                    "type": "variable_if",
                    "value": 1
                  }
                ],
                "from": {
                  "key_code": "q",
                  "modifiers": {
                    "mandatory": ["command"]
                  }
                },
                "to": [
                  {
                    "key_code": "q",
                    "modifiers": ["left_command"]
                  }
                ],
                "type": "basic"
              },
              {
                "from": {
                  "key_code": "q",
                  "modifiers": {
                    "mandatory": ["command"]
                  }
                },
                "to": [
                  {
                    "set_variable": {
                      "name": "command-q",
                      "value": 1
                    }
                  }
                ],
                "to_delayed_action": {
                  "to_if_canceled": [
                    {
                      "set_variable": {
                        "name": "command-q",
                        "value": 0
                      }
                    }
                  ],
                  "to_if_invoked": [
                    {
                      "set_variable": {
                        "name": "command-q",
                        "value": 0
                      }
                    }
                  ]
                },
                "type": "basic"
              }
            ]
          }
        ]
      },
      "name": "Default profile",
      "selected": true,
      "virtual_hid_keyboard": { "keyboard_type_v2": "ansi" }
    }
  ]
}
